@using SimbirsfotStaging10.Controllers;
@using System.Text;
@model SimbirsfotStaging10.BLL.DTO.PlatformsDTO


<h2>Изменение названия склона</h2>
<form method="post" asp-controller="Platforms">
    <div asp-validation-summary="ModelOnly"></div>
    @*<h4 asp-for="id">Склон  @Model.Name</h4><br />*@

    <div class="form-group">
        @*<label asp-for="Name">Наименование склона</label><br />*@
        <label asp-for="Name">Текущее наименование склона: @Model.Name</label>
        <input asp-for="Name" type="text" class="form-control col-3" value="@Model.Name" placeholder="Наименование" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <button asp-action="Edit" type="submit" class="btn btn-primary">Сохранить карту </button>
        <button asp-action="Index" class="btn btn-light">Отмена</button>
    </div>
</form>

