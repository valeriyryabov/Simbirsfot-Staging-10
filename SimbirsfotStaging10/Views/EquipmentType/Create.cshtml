    <form method="post" asp-controller="EquipmentType" asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="Name">Название типа экипировки</label><br />
            <input asp-for="Name" type="text" class="form-control col-3" placeholder="Название" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="SizeAge">Возраст</label><br />
            <input asp-for="SizeAge" type="text" class="form-control col-3" placeholder="Возраст" />
            <span asp-validation-for="SizeAge"></span>
