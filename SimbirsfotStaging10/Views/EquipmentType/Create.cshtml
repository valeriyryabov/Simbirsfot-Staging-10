                <option value="">Выберите возраст, для которого предназначается данный вид экипировки </option>
                <option value="adult">Взрослые</option>
                <option value="kid">Дети</option>
                <option value="non">Отсутствует</option>
            </select>
    -->

        </div>

        <div>
            <button type="submit" class="btn btn-primary">Добавить оборудование</button>
            <button asp-action="List" class="btn btn-light">Отмена</button>
        </div>
    </form>
}
