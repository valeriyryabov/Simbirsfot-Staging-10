@model SimbirsfotStaging10.BLL.DTO.CardDTO
@using System.Text;

<h2>Редактирование карты</h2>
<form method="post" asp-controller="Card">
    <div asp-validation-summary="ModelOnly"></div>
    <h4 asp-for="Id">Карта № @Model.Id</h4><br />
    <div class="form-group">
        <label asp-for="DateBegin">Дата начала срока использования</label><br />
        <label asp-for="DateBegin">Текущее значение даты начала срока: @Model.DateBegin.ToString()</label>
        <input asp-for="DateBegin" type="date" asp-format="{0:dd-MM-yyyy}" class="form-control col-3" value="@Model.DateBegin.ToString()" placeholder="Дата начала срока использования" />
        <span asp-validation-for="DateBegin"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateEnd">Дата окончания срока использования</label><br />
        <label asp-for="DateEnd">Текущее значение даты конца срока: @Model.DateEnd.ToString()</label>
        <input asp-for="DateEnd" type="date" asp-format="{0:dd-MM-yyyy}" class="form-control col-3" value="@Model.DateEnd" placeholder="Дата конца срока использования" />
        <span asp-validation-for="DateEnd"></span>
    </div>
    <div>
        <button asp-action="Edit" type="submit" class="btn btn-primary">Сохранить карту </button>
        <button asp-action="List" class="btn btn-light">Отмена</button>
    </div>
</form>