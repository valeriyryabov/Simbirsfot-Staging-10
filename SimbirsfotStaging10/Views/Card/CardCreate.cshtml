@page
@model SimbirsfotStaging10.BLL.DTO.CardDTO
@{
    ViewData["Title"] = "Добавить карту доступа";
}

<h1>CardCreate</h1>
<h2 class="text-center> mb-5">Добавление новой карты</h2>
<form method="post" asp-controller="CardController" asp-action="AddCard">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="DateBegin">Дата начала срока использования</label><br />
        <input asp-for="DateBegin" type="datetime" class="form-control col-3" placeholder="Дата начала" />
        <span asp-validation-for="DateBegin"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateEnd">Дата окончания срока использования</label><br />
        <input asp-for="DateEnd" type="datetime" class="form-control col-3" placeholder="Дата окончания" />
        <span asp-validation-for="DateEnd"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Добавить карту</button>
    </div>
</form>

