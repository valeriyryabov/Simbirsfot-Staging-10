@model IEnumerable<SimbirsfotStaging10.BLL.DTO.CardDTO>

@{
    ViewData["Title"] = "Карты доступа";
}

<h1>Карты доступа</h1>

<p>
    <a asp-action="Create">Добавить новую карту</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Номер
            </th>
            <th>
                Дата начала срока действия
            </th>
            <th>
                Дата конца срока действия
            </th>
            <th>
                Действия
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateBegin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEnd)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>