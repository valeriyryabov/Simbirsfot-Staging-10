@model SimbirsfotStaging10.BLL.DTO.UserLoginDTO
@{
    ViewData["Title"] = "Вход";
}

    <form method="post" asp-controller="Account" asp-action="LogIn">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="EmailOrUserName">Email/Логин</label><br />
            <input asp-for="EmailOrUserName" class="form-control col-3" placeholder="Email/Login" />
            <span asp-validation-for="EmailOrUserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль</label><br />
            <input asp-for="Password" class="form-control col-3" placeholder="Введите пароль" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" asp-for="RememberMe" id="checkRemberMe" value="true">
            <input asp-for="RememberMe" type="hidden" value="false">
            <label class="form-check-label" for="checkRemberMe">Запомнить</label>
        </div>
	    <div>
		    <button type="submit" class="btn btn-primary">Войти</button>
		    <a class="btn btn-primary" asp-controller="Account" asp-action="SignInVk">Vk</a>
	    </div>
	    
    </form>

